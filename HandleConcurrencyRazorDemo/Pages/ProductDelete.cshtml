@page
@model HandleConcurrencyRazorDemo.Pages.ProductDeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Product Delete</h1>

@if (Model.DisplayEntityInfo)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.VersionInfo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.VersionInfo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.ItemsInStock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.ItemsInStock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.ItemsInOrder)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.ItemsInOrder)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.VersionQuantities)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.VersionQuantities)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Created)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Created) by @Html.DisplayFor(model => model.Entity.CreatedBy)
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Modified)
            </dt>
            <dd class="col-sm-10">
                @if (Model.Entity.Modified is null)
                {
                    <text>(Not yet modified)</text>
                }
                else
                {
                    <text>@Html.DisplayFor(model => model.Entity.Modified) by @Html.DisplayFor(model => model.Entity.ModifiedBy)</text>
                }
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Entity.Id" />
            <input type="hidden" asp-for="Signature" />
            <input type="submit" value="Delete" class="btn btn-danger" /> <a class="btn btn-secondary" role="button" asp-page="./ProductsGrid">Back to List</a>
        </form>

    </div>
}
else
{
    <a class="btn btn-secondary" role="button" asp-page="./ProductsGrid">Back to List</a>
}

@if (TempData[ProductDeleteModel.Message] is not null)
{
    <div class="alert alert-info mt-4">
        @TempData[ProductDeleteModel.Message]
    </div>
}
