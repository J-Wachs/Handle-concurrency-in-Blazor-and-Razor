@page
@model HandleConcurrencyRazorDemo.Pages.ProductUpdateModel

@{
    ViewData["Title"] = "Product Update";
}

<style>
    .entryform {
        display: grid;
        grid-template-columns: max-content auto;
    }

        .entryform > div {
            padding: 3px;
        }
</style>

<h1>Product Update</h1>

<form class="entryform" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div></div>
    <div>
        <label asp-for="Entity.Id" class="control-label"></label>
    </div>
    <div>
        <input type="hidden" asp-for="Entity.Id" />
        <input type="hidden" asp-for="Signature" />
        @Model.Entity.Id
    </div>
    <div>
        <label asp-for="Entity.Name" class="control-label"></label>
    </div>
    <div>
        <input asp-for="Entity.Name" class="form-control" />
        <span asp-validation-for="Entity.Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Entity.ItemsInStock" class="control-label"></label>
    </div>
    <div>
        <input asp-for="Entity.ItemsInStock" class="form-control" />
        <span asp-validation-for="Entity.ItemsInStock" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Entity.ItemsInOrder" class="control-label"></label>
    </div>
    <div>
        <input asp-for="Entity.ItemsInOrder" class="form-control" />
        <span asp-validation-for="Entity.ItemsInOrder" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Entity.Created" class="control-label"></label>
    </div>
    <div>
        <input type="hidden" asp-for="Entity.Created" />
        <input type="hidden" asp-for="Entity.CreatedBy" />
        @Model.Entity.Created by @Model.Entity.CreatedBy
    </div>
    <div>
        <label asp-for="Entity.Modified" class="control-label"></label>
    </div>
    <div>
        <input type="hidden" asp-for="Entity.Modified" class="form-control" />
        <input type="hidden" asp-for="Entity.ModifiedBy" class="form-control" />
        @if (Model.Entity.Modified is null)
        {
            <text>(Not modified yet)</text>
        }
        else
        {
            <text>@Model.Entity.Modified by @Model.Entity.ModifiedBy</text>
        }
    </div>
    <div>Record version:</div>
    <div>
        <input type="hidden" asp-for="Entity.VersionInfo" />
        <input type="hidden" asp-for="Entity.VersionQuantities" />
        Info: @Model.Entity.VersionInfo<br />
        Quantities: @Model.Entity.VersionQuantities
    </div>
    <div>

    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" /> <a class="btn btn-secondary" asp-page="./ProductsGrid">Back to List</a>
    </div>
</form>


@if (TempData[ProductUpdateModel.Message] is not null)
{
    <div class="alert alert-info mt-4">
        @TempData[ProductUpdateModel.Message]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
