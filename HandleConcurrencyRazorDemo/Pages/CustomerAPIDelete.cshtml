@page
@model HandleConcurrencyRazorDemo.Pages.CustomerAPIDeleteModel

@{
    ViewData["Title"] = "Customer API Delete";
}

<h1>Customer API Delete</h1>

@if (Model.DisplayEntityInfo)
{
    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Customer</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.ZipCode)/@Html.DisplayNameFor(model => model.Entity.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.ZipCode) @Html.DisplayFor(model => model.Entity.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Version)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Version)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Created)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Created)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.CreatedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.CreatedBy)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.Modified)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.Modified)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Entity.ModifiedBy)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Entity.ModifiedBy)
            </dd>
        </dl>

        <form method="post">
            <input type="hidden" asp-for="Entity.Id" />
            <input type="hidden" asp-for="Entity.Version" />
            <input type="hidden" asp-for="Signature" />
            <input type="submit" value="Delete" class="btn btn-danger" /> <a class="btn btn-secondary" role="button" asp-page="./CustomersAPIGrid">Back to List</a>
        </form>

    </div>
}
else
{
    <a class="btn btn-secondary" role="button" asp-page="./CustomersAPIGrid">Back to List</a>
}

@if (TempData[CustomerRepositoryUpdateModel.Message] is not null)
{
    <div class="alert alert-info mt-4">
        @TempData[CustomerRepositoryUpdateModel.Message]
    </div>
}
