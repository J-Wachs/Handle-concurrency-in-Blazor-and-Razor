@page
@model HandleConcurrencyRazorDemo.Pages.ProductCreateModel

@{
    ViewData["Title"] = "Product Create";
}

<style>
    .entryform {
        display: grid;
        grid-template-columns: max-content auto;
    }

        .entryform > div {
            padding: 3px;
        }
</style>

<h1>Product Create</h1>

<form class="entryform" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <span class="text-danger">*</span>
        <label asp-for="Entity.Name" class="control-label"></label>
    </div>
    <div>
        <input asp-for="Entity.Name" class="form-control" />
        <span asp-validation-for="Entity.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <span class="text-danger">*</span>
        <label asp-for="Entity.ItemsInStock" class="control-label"></label>
    </div>
    <div>
        <input asp-for="Entity.ItemsInStock" class="form-control" />
        <span asp-validation-for="Entity.ItemsInStock" class="text-danger"></span>
    </div>
    <div class="form-group">
        <span class="text-danger">*</span>
        <label asp-for="Entity.ItemsInOrder" class="control-label"></label>
    </div>
    <div>
        <input asp-for="Entity.ItemsInOrder" class="form-control" />
        <span asp-validation-for="Entity.ItemsInOrder" class="text-danger"></span>
    </div>
    <div>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" /> <a class="btn btn-secondary" role="button" asp-page="./ProductsGrid">Back to list</a>
    </div>

</form>

@if (TempData[ProductCreateModel.Message] is not null)
{
    <div class="alert alert-info mt-4">
        @TempData[ProductCreateModel.Message]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
