
<div class="modal @modalClass" tabindex="-1" role="dialog" style="display:@modalDisplay; overflow-y: auto;">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close" @onclick="Close">
                </button>
            </div>
            <div class="modal-body">
                @popupContent
            </div>
        </div>
    </div>
</div>

@if (showBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}
@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public required RenderFragment ChildContent { get; set; }
    [Parameter]
    public EventCallback OnClose { get; set; }

    private RenderFragment? popupContent { get; set; }

    private string modalDisplay = "none;";
    private string modalClass = string.Empty;
    private bool showBackdrop = false;

    /// <summary>
    /// Opens (displays) the modal dialog box.
    /// Please note that it is at this time the 'popupContent' is set.
    /// This means that at this time the lifecycle methods are triggered in the 
    /// content.
    /// </summary>
    public void Open()
    {
        modalDisplay = "block";
        modalClass = "show";
        popupContent = ChildContent;
        showBackdrop = true;
    }

    /// <summary>
    /// Closes (hides) the modal dialog box.
    /// Please note that the content field is set to null to prevent further
    /// trigging of lifecycle methods in the content.
    /// </summary>
    public void Close()
    {
        modalDisplay = "none";
        modalClass = string.Empty;
        showBackdrop = false;
        popupContent = null;
        if (OnClose.HasDelegate)
        {
            OnClose.InvokeAsync().GetAwaiter();
        }
    }
}
